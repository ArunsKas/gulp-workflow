{
  "name": "<%= appName %>",
  "description": "<%= appDescription %>",
  "authors": [
    "<%= authorName %> <<%= authorEmail %>> (<%= authorUrl %>)"
  ],
  "license": "<%= license %>",
  "homepage": "https://github.com/<%= userName %>/<%= appNameSlug %>",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= userName %>/<%= appNameSlug %>.git"
  },
  "moduleType": [],
  "private": true,
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "dependencies": {
    "jquery": "~2.1.4",
    <% if (cssFramework === 'foundation-sites') { %> 
    "foundation-sites": "~6.0.5",
    <% } else if (cssFramework === 'foundation-apps') { %>
    "foundation-apps": "~1.2.0",
    <% } else if (cssFramework === 'bootstrap') { %>
    "bootstrap": "~3.3.6",
    <% } else if (cssFramework === 'bootstrap v4.0.0-alpha') { %>
    "bootstrap": "https://github.com/twbs/bootstrap/archive/v4.0.0-alpha.zip",
    <% } else {} %>
    "font-awesome": "~4.5.0"
  },
  "overrides": {
    <% if (cssFramework === 'foundation-sites') { %>
    "foundation-sites": {
      "main": [
        "scss/**/*.scss",
        "dist/foundation.css",
        "dist/*.js"
      ]
    },
    <% } else if (cssFramework === 'foundation-apps') { %>
    "foundation-apps": {
      "main": [
        "scss/**/*.scss",
        "dist/css/foundation-apps.css",
        "dist/js/*.js"
      ]
    },
    <% } else if (cssFramework === 'bootstrap') { %>
    "bootstrap": {
      "main": [
        "dist/css/bootstrap.css",
        "dist/js/bootstrap.js",
        "dist/js/bootstrap.min.js"
      ]
    },
    <% } else if (cssFramework === 'bootstrap v4.0.0-alpha') { %>
    "bootstrap": {
      "main": [
        "scss/**/*.scss",
        "dist/css/bootstrap.css",
        "dist/js/bootstrap.js",
        "dist/js/bootstrap.min.js"
      ]
    },
    <% } else {} %>
    "jquery": {
      "main": [
        "dist/jquery.js",
        "dist/jquery.min.js"
      ]
    },
    "font-awesome": {
      "main": [
        "scss/**/*.scss",
        "css/font-awesome.css",
        "fonts/**/*"
      ]
    }
  }
}
